@model ProductAddingModel

@{
    if(ViewBag.Id == null)
    {
        ViewData["Title"] = "Add Product";
    }
    else
    {
        ViewData["Title"] = "Edit Product";
    }

}

@if (ViewBag.Id == null)
{
    <h4 class="text-center">Add product</h4>
}
else
{
    <h4 class="text-center">Edit product</h4>
}

<hr />
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Produc name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Place image url" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="ManufactureYear" class="control-label"></label>
                    <input asp-for="ManufactureYear" class="form-control" placeholder="Wine production year" />
                    <span asp-validation-for="ManufactureYear" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" placeholder="Enter product price in levs" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Describe product"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="InStock" /> @Html.DisplayNameFor(model => model.InStock)
                </label>
            </div>
            <div class=" = row">
                <div class="form-group col">
                    <select class="form-select form-control" asp-for="TasteId">
                        <option selected>Choose taste</option>
                        @foreach (var taste in Model.AllTastes)
                        {
                            <option value="@taste.Id">@taste.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group col">
                    <select class="form-select form-control" asp-for="ColorId">
                        <option selected>Choose color</option>
                        @foreach (var color in Model.AllColors)
                        {
                            <option value="@color.Id">@color.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="form-group col">
                    <select class="form-select form-control" asp-for="WineAreaId">
                        <option selected>Choose wine area</option>
                        @foreach (var area in Model.WineAreas)
                        {
                            <option value="@area.WineAreaId">@area.WineAreName</option>
                        }
                    </select>
                </div>
                <div class="form-group col">
                    <select class="form-select form-control" asp-for="ManufacturerId">
                        <option selected>Choose manufacturer</option>
                        @foreach (var manufacturer in Model.Manufacturers)
                        {
                            <option value="@manufacturer.Id">@manufacturer.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="GrapeVarieties" class="control-label"></label>
                <select multiple asp-for="GrapeVarieties" class="form-control">
                    @foreach (var grape in Model.AllGrapeVarieties)
                    {
                        <option value="@grape.GrapeVarietyId">@grape.GrapeVarietyName</option>
                    }
                </select>
                <p class="fs-6 fw-light fst-italic">Use CTRL and Click to select more than one option.</p>
            </div>
            @if (ViewBag.Id == null)
            {
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary mt-2" />
                </div>
            }
            else
            {
                <div class="form-group">
                    <input type="submit" value="Save" asp-route-id=@ViewBag.Id class="btn btn-primary mt-2" />
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
