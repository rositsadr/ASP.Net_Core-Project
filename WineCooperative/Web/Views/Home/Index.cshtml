@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/styleHome.css">

<div class="container">
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/wineyard.jpg" class="d-block w-100" alt="Unavailable">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Bulgarian Wineyards</h5>
                    <p>We offer products only from local wineyards.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/Rd2ba86614c0d635270b57401e2c5045a.jpg" class="d-block w-100" alt="Unavailable">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Servecies</h5>
                    <p>If you are a small producer we can help you with production.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/113667-sommelier-selections-5-bottles-from-5-different-countries-to-celebrate-with-on-national-wine-day.jpg" class="d-block w-100" alt="Unavailable">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Shop</h5>
                    <p>Best local wines from small and unique wineries.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<div class="container-fluid text-white text-center mt-5 mb-5">
    <div class="row">
        <article class="col-4 d-inline-block border border-white border-3">
            <h4 class="timesFont pb-3 pt-3">The shop</h4>
            <p class="ps-5 pe-5">In our shop you can find local products made in Bulgaria. Small winaries make unique wines with great quality, hard to find on the market </p>
            <p>
                <a class="text-decoration-none text-white timesFont" href="#">
                    View all products
                    <span>
                        <i class="fas fa-long-arrow-alt-right"></i>
                    </span>
                </a>
            </p>
        </article>
        <article class="col-4 d-inline-block border border-white border-3">
            <h4 class="timesFont pb-3 pt-3">Our services</h4>
            <p class="ps-5 pe-5">Our main goal is to help small wine and grape producers. So we offer different services in order to help the in producing wine.</p>
            <p>
                <a class="text-decoration-none text-white timesFont" href="#">
                    View all services
                    <span>
                        <i class="fas fa-long-arrow-alt-right"></i>
                    </span>
                </a>
            </p>
        </article>
        <article class="col-4 d-inline-block border border-white border-3">
            <h4 class="timesFont pb-3 pt-3">Wine areas map</h4>
            <p class="ps-5 pe-5">Our main goal is to help wine producing in Bulgaria. We are train to distribute tipical Bulgarian varieties of grape and wine, unique for our geographical area</p>
            <p>
                <a class="text-decoration-none text-white timesFont" href="">
                    Check wine areas in Bulgaria
                    <span>
                        <i class="fas fa-long-arrow-alt-right"></i>
                    </span>
                </a>
            </p>
        </article>
    </div>
</div>
