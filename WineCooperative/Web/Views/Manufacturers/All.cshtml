@model List<ManufacturerServiceModel>

@{
    ViewData["Title"] = "Manufacturers Page";
}

<div class="container">
    <div class="col-12 text-center mb-5">
        <h2 class="d-block">Manufacturers</h2>
        <p>You can become one of us or use our help!</p>
    </div>
    <div class="row">
        @foreach (var manufacturer in Model)
        {
            <div class="card col-lg-4 mb-5 col-md-6">
                <div class="card-body">
                    <h5 class="card-title">@manufacturer.Name</h5>
                    <div class="card-subtitle mb-2 text-muted">
                        <p>Address: @manufacturer.Address.Street , @manufacturer.Address.TownName</p>
                        <p>@manufacturer.Address.ZipCode Bulgaria</p>
                    </div>
                    <p class="card-text">@manufacturer.Description</p>
                    <a asp-controller="Products" asp-action="All" asp-route-id="@manufacturer.Id" class="card-link">Products</a>
                    <a asp-controller="Services" asp-action="All" asp-route-id="@manufacturer.Id" class="card-link float-right">Services</a>
                    @if (User.IsAdmin())
                    {
                <div class="text-center mt-3">
                    <a class="btn btn-warning" role="button" asp-area="" asp-controller="Services" asp-action="Edit" asp-route-id=@manufacturer.Id>Edit</a>
                    <a class="btn btn-danger" role="button" asp-area="" asp-controller="Services" asp-action="Delete" asp-route-id=@manufacturer.Id>Delete</a>
                </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
