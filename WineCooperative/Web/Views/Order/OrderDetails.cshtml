@model OrderServiceModel

@{ 
    ViewData["Title"] = "Order details";
}

<h4 class="text-center">@ViewData["Title"]</h4>
<hr />
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>№</th>
            <th>Product name</th>
            <th>Product price</th>
            <th>Products quantity</th>
            <th>Product total price</th>
        </tr>
    </thead>
    <tbody>
        @{
            var itemNumber = 0;
            foreach (var item in Model.Products)
            {
                itemNumber++;
                <tr>
                    <td>@itemNumber</td>
                    <td class="text-center">@item.ProductName</td>
                    <td class="text-center">@item.Price lv.</td>
                    <td class="text-center">@item.Quantity</td>
                    <td class="text-center">@item.TotalPrice lv.</td>
                </tr>
            }
        }
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td>Total order amount:</td>
        <td class="text-center">@Model.TotalAmount lv.</td>
    </tr>
    </tbody>
</table>
<div class="text-center">
    <a class="btn btn-primary" asp-area="" asp-controller="Cart" asp-action="MyCart" asp-route-userId="@User.GetId()">Go Back</a>
    <a class="btn btn-danger" asp-area="" asp-controller="Order" asp-action="FinalizeOrder" asp-route-id="@User.GetId()">Pay now</a>
</div>
